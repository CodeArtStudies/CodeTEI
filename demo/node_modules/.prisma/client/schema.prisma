// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model CodeWork {
  id         String   @id @default(cuid())
  title      String
  author     String
  sourceCode String
  sha3Hash   String   @unique
  codeteiXml String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  explanations Explanation[]
  executions   Execution[]

  @@map("code_works")
}

model Explanation {
  id         String  @id @default(cuid())
  type       String // "work" or "line"
  lineNumber Int? // null for work explanations
  content    String
  agent      String  @default("chatgpt")
  model      String?
  confidence Float?

  // User feedback
  understanding Int? // 1-3 scale
  question      String?

  codeWorkId String
  codeWork   CodeWork @relation(fields: [codeWorkId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("explanations")
}

model Execution {
  id   String @id @default(cuid())
  type String // "container" or "blockchain"

  // Container execution
  containerInfo String?

  // Blockchain execution  
  chainName String?
  txId      String?

  // Common fields
  status     String // "success" or "failure"
  notes      String?
  executedAt DateTime @default(now())

  codeWorkId String
  codeWork   CodeWork @relation(fields: [codeWorkId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@map("executions")
}
